pipeline {
    agent any 
    
    stages { 
        stage('SCM Checkout') {
            steps {
                retry(3) {
                    git branch: 'main', url: 'https://github.com/Nadun-Dissanayake/Restaurant-web-frontend.git'
                }
            }
        }
        stage('Build Docker Image') {
            steps {  
                bat 'docker build -t ndissanayake/mern_app_frontend_new:%BUILD_NUMBER% .'
            }
        }
        stage('Login to Docker Hub') {
            steps {
                withCredentials([string(credentialsId: 'duckerhubpassword', variable: 'mernapp')]) {
                    script {
                        bat "docker login -u ndissanyake -p ${mernapp}"
                    }
                }
            }
        }
        stage('Push Image') {
            steps {
                bat 'docker ndissanayake/mern_app_frontend_new:%BUILD_NUMBER%'
            }
        }
    }
    post {
        always {
            bat 'docker logout'
        }
    }
}